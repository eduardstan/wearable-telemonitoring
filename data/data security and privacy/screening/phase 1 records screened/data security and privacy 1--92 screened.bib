   issue = {8},
   journal = {NeuroQuantology},
   keywords = {DNA,DNA strand,algorithm,article,body temperature,computer analysis,encryption,health care cost,health care system,health service,heart rate,human,hybrid,information security,memory,monitoring,physiological process,pulse oximetry,validation process},
   pages = {5585-5595},
   title = {A Hybrid Encryption Algorithm for IoT Data Protection in Healthcare Monitoring System},
