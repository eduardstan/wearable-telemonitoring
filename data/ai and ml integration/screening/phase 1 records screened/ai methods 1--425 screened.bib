   keywords = {Knee;Feature extraction;Predictive models;Remote monitoring;Injuries;Computational modeling;Pathology;sEMG;movement classification;joint angle prediction;signal processing;LSTM;CNN;transfer learning},
   month = {1},
   pages = {1-10},
   title = {MyoNet: A Transfer-Learning-Based LRCN for Lower Limb Movement Recognition and Knee Joint Angle Prediction for Remote Monitoring of Rehabilitation Progress From sEMG},
