   doi = {10.1109/JSAC.2020.3020599},
   issn = {1558-0008},
   issue = {2},
   journal = {IEEE Journal on Selected Areas in Communications},
   keywords = {Medical diagnostic imaging;Authentication;Medical services;Cloud computing;Protocols;Medical information systems;Security protection;telecare medical information system;patient anonymity;mutual authenticity},
