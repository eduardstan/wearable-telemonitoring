   keywords = {Heart;Feature extraction;Convolutional neural networks;Wearable devices;Biomedical monitoring;Deep learning;Cardiovascular diseases;Convolutional neural network;heart sounds classification;deep learning;CVD detection},
   month = {1},
   pages = {1186-1194},
   title = {DS-CNN: Dual-Stream Convolutional Neural Networks-Based Heart Sound Classification for Wearable Devices},
