   keywords = {COVID-19;Pandemics;Drones;Diseases;Computer viruses;Testing;Databases;Contact tracing;COVID-19;case identification;contacts identification;rapid exposure notification;regular follow up;Healthcare;Infectious disease;post-pandemic services},
   month = {1},
   pages = {38-52},
   title = {Emerging Technologies Used in Health Management and Efficiency Improvement During Different Contact Tracing Phases Against COVID-19 Pandemic},
   volume = {16},
   year = {2023},
}
