   journal = {IEEE Internet of Things Journal},
   keywords = {Robot sensing systems;Cloud computing;Internet of Things;Accelerometers;Image edge detection;Cameras;Smart phones;Dockers;edge and fog computing;ensemble learning;fall detection;neural network compression;transfer learning},
