   keywords = {Apple Watch,Inner Balance,NCT05958329,New York,adult,anxiety disorder,article,biofeedback,biofeedback system (device),circadian rhythm,controlled study,depression,digital health technology,diode,feasibility study,female,health care personnel,health education,heart rate variability,human,iPhone,longitudinal study,major clinical study,male,mental compliance,mobile health application,multicenter study,open study,pilot study,prospective study,psychologic assessment,psychological well-being,remote sensing,sensor,smart watch,smartphone,videorecording,wearable device},
   title = {Remote Short Sessions of Heart Rate Variability Biofeedback Monitored with Wearable Technology: Open-Label Prospective Feasibility Study},
