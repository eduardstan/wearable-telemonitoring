   issue = {9},
   journal = {JMIR Formative Research},
   keywords = {AI ECG,AI wearables,artificial intelligence ECG,big data,cardiovascular medicine,digital health,machine learning},
   note = {Export Date: 06 January 2025; Cited By: 4},
   title = {Comparison Between QT and Corrected QT Interval Assessment by an Apple Watch With the AccurBeat Platform and by a 12-Lead Electrocardiogram With Manual Annotation: Prospective Observational Study},
