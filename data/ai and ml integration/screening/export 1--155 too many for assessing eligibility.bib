   keywords = {Monitoring;Motors;Wrist;Diseases;Biomedical monitoring;Ankle;Accuracy;Data models;Data collection;Wearable devices;Accelerometry;inertial sensing;machine learning;motor symptoms;Parkinsonism;Parkinson’s disease;remote monitoring;sensors;wearable},
   month = {1},
