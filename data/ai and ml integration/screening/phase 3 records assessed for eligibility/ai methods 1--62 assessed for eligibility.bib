   keywords = {Deep learning;Image segmentation;Sensitivity;Real-time systems;Electronic healthcare;Internet of Things;Cardiovascular diseases;Biomedical imaging;Visual communication;Ultrasonic imaging},
   month = {1},
   pages = {36-43},
   title = {A Deep Segmentation Network of Stent Structs Based on IoT for Interventional Cardiovascular Diagnosis},
   volume = {28},
   year = {2021},
